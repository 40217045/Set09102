<Window x:Class="_40217045_CW1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_40217045_CW1"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Image HorizontalAlignment="Left" Height="184" VerticalAlignment="Top" Width="286" Source="ELM.png" Margin="4,5,0,0"/>

        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="62,169,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Cancel" Margin="155,169,62,0" VerticalAlignment="Top" RenderTransformOrigin="0.471,-0.694" Click="btnExit_Click"/>
        <Label x:Name="lblUser" Content="Username" HorizontalAlignment="Left" Margin="47,112,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="26" Margin="115,112,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="143"/>

    </Grid>
</Window>
